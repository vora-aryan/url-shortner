<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      table {
        margin: 30px;
      }
      th,
      td {
        padding: 4px 10px;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortner</h1>

    <form action="/url" method="post">
      <label for="">Enter URL to short</label>
      <input type="text" name="url" placeholder="htttps://www.xyz.com" />
      <button type="submit">generate</button>
    </form>
    <% if(locals.id) {%>
    <p>
      url generated ðŸ‘‰
      <a target="_blank" href="http://localhost:8000/url/<%=id%>"
        >http://localhost:8000/url/<%=id%></a
      >
    </p>
    <% } %>
    <table border="1">
      <tbody>
        <thead>
          <tr>
            <th>Urls</th>
            <th>website</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <% locals.urls.forEach((url,ind) => { %>
        <tr>
          <td>
            <a target="_blank" href="http://localhost:8000/url/<%=url.shortId%>"
              >http://localhost:8000/url/<%=url.shortId%></a
            >
          </td>
          <td><%= url.redirectUrl %></td>
          <td><%=+url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
